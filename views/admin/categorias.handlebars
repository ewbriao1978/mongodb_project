<h2>Lista de categorias</h2>
<hr>
<a href="/admin/categorias/add"<button class="btn btn-success">Nova categoria</button></a>

{{#each categorias}}

    <div class="card mt-4">
        <div class="card-body">
            <h4>{{nome}}</h4>
            <small>Slug: {{slug}}</small><br>
            <small>Data de criação: {{date}}</small><br>
            <a href="/admin/categorias/edit/{{_id}}"><button class="btn btn-success mt-4">  Editar </button></a>
            <a href="/admin/categorias/deletar/{{_id}}"><button class="btn btn-danger mt-4">  Remover </button></a>


        </div>
    </div>

{{else}}
<h4>Nenhuma categoria cadastrada.</h4>
{{/each}}
